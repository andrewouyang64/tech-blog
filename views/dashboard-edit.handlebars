<section>
        <h2>Your Dashboard</h2>
        <div class="dashboard">
            <div class="form-group">
                <p>Edit Post</p> 
                <p>Title</p>
                    <form class="post-title" action="input">
                        <div class="title-text">
                            <textarea name="title" id="title" cols="70" rows="1">{{post.title}}</textarea>
                            <!--label for="title"></label>
                            <input type="text"-->
                        </div>
                        <p>Content</p>
                        <div>
                            <!--label class="content" for="content"></label-->
                            <textarea name="content" id="content" cols="70" rows="4">{{post.content}}</textarea>
                            <!--input type="text"-->
                        </div>
                            <div class="form-group">
                                <button class="btn btn-update" type="submit">Update Post</button>
                                <button class="btn btn-delete" type="submit">Delete Post</button>
                            </div>
                    </form>
            </div>
        </div>
</section>